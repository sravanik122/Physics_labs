{
  "experiment_version": "1.0.0",

  "default_sampling_interval": 0.1,
  "default_total_time": 5,
  "noise_sigma": 0.01,

  "default_input_ranges": {
    "angle_of_incidence": { "min": 0, "max": 90 },
    "object_distance": { "min": 0.1, "max": 10 },
    "screen_distance": { "min": 0.1, "max": 10 },
    "light_intensity": { "min": 0.1, "max": 100 },
    "surface_smoothness": { "min": 0, "max": 1 },
    "ambient_light": { "min": 0, "max": 1 },
    "wavelength": { "min": 380, "max": 750 }
  },

  "constants": {
    "law_of_reflection_factor": 1.0,

    "mirror_types": {
      "plane": {
        "reflection_efficiency": 0.95
      },
      "concave": {
        "reflection_efficiency": 0.9,
        "focal_length": 1.0
      },
      "convex": {
        "reflection_efficiency": 0.85,
        "focal_length": -1.0
      }
    },

    "inverse_square_constant": 1.0,

    "shadow_blur_factor": {
      "ideal": 0.0,
      "rough": 0.5
    },

    "wavelength_color_map": {
      "violet": 400,
      "blue": 470,
      "green": 530,
      "yellow": 580,
      "orange": 600,
      "red": 650
    }
  },

  "visual": {
    "max_rays": 20,
    "show_normal_line": true,
    "show_incident_ray": true,
    "show_reflected_ray": true,

    "shadow": {
      "max_blur_radius": 30,
      "max_opacity": 1.0
    },

    "light": {
      "ray_thickness": 2,
      "intensity_scale": 1.0
    },

    "animation": {
      "recommended_fps": 60
    }
  }
}
